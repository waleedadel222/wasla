<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:hint="Tile"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_year"
        android:layout_below="@+id/add_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:hint="Year"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_department"
        android:layout_below="@+id/add_year"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Department"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/add_post"
        android:layout_below="@+id/add_department"
        android:layout_centerHorizontal="true"
        android:hint="Post"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="ADD"
        android:id="@+id/add_button"
        android:layout_below="@+id/add_post"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="cancel"
        android:id="@+id/cancel"
        android:layout_alignBottom="@+id/add_button"
        android:layout_toLeftOf="@+id/add_button"
        android:layout_toStartOf="@+id/add_button" />


</RelativeLayout><!-- From: file:/C:/Users/waleed/AndroidStudioProjects/wasel1/app/src/main/res/layout/add_news_activity.xml -->